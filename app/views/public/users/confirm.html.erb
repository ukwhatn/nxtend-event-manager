<div style="max-width: 600px" class="mx-auto">
  <table class="table">
    <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @user.full_name %></td>
    </tr>
    <tr>
      <th>氏名（カナ）</th>
      <td><%= @user.full_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    </tbody>
  </table>

  <div class="d-flex justify-content-around mt-5">
    <%= link_to "内容を修正", sign_up_path, class: "btn btn-secondary" %>
    <%= link_to "ユーザ登録", sign_up_path, class: "btn btn-primary", data: { "turbo-method": :post } %>
  </div>
</div>

<style>
    .table > tbody > tr {
        line-height: 3em;
    }
</style>